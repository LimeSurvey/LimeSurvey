
{# /**
 * Multiple numeric : dynamic row (remaining + total)
 * @var $id
 * @var $sumRemainingEqn
 * @var $sumEqn
 * @var $sLabelWidth
 * @var $sInputContainerWidth
 * @var $prefix
 * @var $suffix
 */ #}

{% if sumRemainingEqn %}
    <li class="form-group ls-group-remaining ls-group-dynamic">
        <div class="col-xs-12 col-sm-{{ sInputContainerWidth }} col-md-offset-{{ sLabelWidth }}">
            <div class="control-label">
                {{ gT('Remaining') }}:
            </div>
            {% if prefix %}
                <div class="prefix-text prefix"><!-- Suffix prefix are not shown inline, but only in the slider: completely diofferent concept : set hidden -->
                    {{ prefix }}
                </div>
            {% endif %}
            <div id="remainingvalue_{{ id }}" class="form-control-static numeric dynamic-remaining" data-number="1"><!-- alternative class : form-control : display like an input:text -->
                {{ '{'~sumRemainingEqn~'}' }}
            </div>
            {% if suffix %}
                <div class="suffix-text suffix">
                   {{ suffix }}
                </div>
            {% endif %}
        </div>
    </li>
{% endif %}

{% if sumEqn %}
    <li class="form-group ls-group-total ls-group-dynamic">
       <div class="col-xs-12 col-sm-{{ sInputContainerWidth }} col-md-offset-{{ sLabelWidth }}">
            <div class="control-label">
                {{gT('Total:')}}
            </div>
            <div id="totalvalue_{{ id }}" class="form-control-static numeric dynamic-total" data-number="1">
                {{ '{'~sumEqn~'}' }}
            </div>
        </div>
    </li>
{% endif %}
