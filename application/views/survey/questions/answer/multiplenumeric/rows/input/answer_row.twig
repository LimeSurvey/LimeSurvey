 * @var $sDisplayStyle
 * @var $prefix
 * @var $myfname
 * @var $labelText
 * @var $sufix
 * @var $kpclass
 * @var $rows
 * @var $checkconditionFunction
 * @var $dispVal
 * @var $suffix
 */ #}

<!-- answer_row -->

<li id='javatbd{{ myfname }}' class="question-item answer-item numeric-item align-items-center text-item row mb-3{{ extraclass }}{% if alert %} ls-error-mandatory has-error {% endif %}" {{ sDisplayStyle }}>
    <!--  color code missing mandatory questions red -->
    <label class="control-label col-12 col-md-{{ sLabelWidth }}{% if sLabelWidth == 0 %} d-none{% endif %}" for="answer{{myfname}}">
        {{ processString(labelText) }}
    </label>

    <div class="col-12 col-md-{{ sInputContainerWidth }}">
        {% if prefix or suffix %}
            <div class="ls-input-group">
        {% endif %}
            {% if prefix %}
                <div class="ls-input-group-extra prefix-text prefix">
                    {{ processString(prefix) }}
                </div>
            {% endif %}
                {{ C.Html.textField( myfname,dispVal, {
                    'id' : 'answer'~myfname,
                    'class' : 'form-control numeric '~kpclass,
                    'title' : gT('Only numbers may be entered in this field.'),
                    'size' : (inputsize ? inputsize : null),
                    'maxlength':  (maxlength ? maxlength : null),
                    'data-number' : 1,
                    'data-integer' : integeronly,
                    })
                }}
            {% if suffix %}
                <div class="ls-input-group-extra suffix-text suffix">
                    {{ processString(suffix) }}
                </div>
            {% endif %}
        {% if prefix or suffix %}
            </div>
        {% endif %}
    </div>
</li>
<!-- end of answer_row -->
